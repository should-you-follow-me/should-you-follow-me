<img src="<%= @user.twitter_picture_url %>">
<h1 class="screen_name"><%= @user.twitter_screen_name %></h1>

<% if @user.should_you_follow_me %>
  <p class="should-be-followed">YES</p>
<% else %>
  <p class="should-not-be-followed">NO</p>
<% end %>

<h2>The good</h2>
<ol class="good-metrics">
  <% @user.good_metrics.each_pair do |key, value| %>
    <li><%= t key, scope: 'metrics' %></li>
  <% end %>
</ol>


<h2>The bad</h2>
<ol class="bad-metrics">
  <% @user.bad_metrics.each_pair do |key, value| %>
    <li><%= t key, scope: 'metrics' %></li>
  <% end %>
</ol>
